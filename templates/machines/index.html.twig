<!DOCTYPE html>

<title>Machines index</title>

{% block body %}
    <h1>Machines index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for machine in machines %}
            <tr>
                <td>{{ machine.id }}</td>
                <td>{{ machine.name }}</td>
                <td>
                    <a href="{{ path('machines_show', {'id': machine.id}) }}">show</a>
                    <a href="{{ path('machines_edit', {'id': machine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('machines_new') }}">Create new</a>
{% endblock %}
