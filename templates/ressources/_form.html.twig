<div class="form-group">
    {{ form_row(form.whatPlanets, { 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'fs-16 fw-600'} }) }}
</div>
<div class="form-group">
    {{ form_row(form.whatMachines, { 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'fs-16 fw-600'} }) }}
</div>
<div class="form-group">
    {{ form_row(form.whatVehicles, { 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'fs-16 fw-600'} }) }}
</div>
<div class="form-group">
    {{ form_row(form.whatObjects, { 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'fs-16 fw-600'} }) }}
</div>
<div class="form-group">
    {{ form_row(form.imageFile, { 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'fs-16 fw-600'} }) }}
