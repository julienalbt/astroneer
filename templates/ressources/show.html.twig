{% extends 'base.html.twig' %}

{% block title %}Ressources {{ ressource.name }}{% endblock %}

{% block body %}

    {% block header %}
        <header class="header header-inverse" style="background-image: url({{ asset('assets/img/formRessource.jpg') }});" data-overlay="4">
            <div class="container text-center">

                <div class="row">
                    <div class="col-12 col-lg-8 offset-lg-2">

                        <h1>{{ ressource.name }}</h1>
                        <p><a class="btn btn-lg btn-primary opacity-85" href="{{ path('ressources_edit', {'id': ressource.id}) }}">Modifier</a></p>
                        <p><a class="btn btn-sm btn-secondary opacity-85" href="{{ path('ressources_index') }}">Retour</a></p>
                    </div>
                </div>

            </div>
        </header>
    {% endblock %}

    <main class="main-content">

        <section class="section">
            <div class="container">
                <header class="section-header">
                    <small><strong>{{ ressource.name }}</strong></small>
                    <h2>Comment l'obtenir ?</h2>
                    <hr>
                    <p class="lead">
                        Obtenu par {{ ressource.origin }}{% if ressource.isItExchangeable == 1 and ressource.isItProducible == 1 %}, via la plateforme d'échange et la centrifugeuse de terre.{% elseif ressource.isItExchangeable == 0 and ressource.isItProducible == 0 %}.{% elseif ressource.isItExchangeable == 1 and ressource.isItProducible == 0 %} et via la plateforme d'échange.{% elseif ressource.isItExchangeable == 0 and ressource.isItProducible == 1 %} et via la centrifugeuse de terre.{% endif %}
                        {% if ressource.ressourcesCreateByRessources is not empty %}<br>
                            <strong>Ressource(s) nécessaire(s) :</strong>
                        <ul class="d-flex flex-wrap list-unstyled justify-content-center">
                            {% for ressourcesCreateByRessources in ressource.ressourcesCreateByRessources %}
                                <li class="mx-5 my-5"><a href="{{ path('ressources_show', {'id': ressourcesCreateByRessources.id}) }}" class="fs-17 text-dark hover-success">{{ ressourcesCreateByRessources.name }}</a></li>
                                {% endfor %}
                        </ul>
                    {% endif %}
                    </p>
                </header>



                <div class="row gap-y">

                    <div class="col-12 offset-md-2 col-md-8 mb-30">
                        <img src="{{ asset('assets/img/formRessource.jpg') }}" alt="..." data-aos="fade-up" data-aos-duration="2000">
                    </div>

                    <div class="col-12">
                        <div>
                            <h5>Sur quelle(s) planète(s) ?</h5>
                            {% if ressource.whatPlanets is not empty %}
                                <ul class="d-flex flex-wrap list-unstyled">
                                    {% for whatPlanets in ressource.whatPlanets %}
                                        <li class="mx-5 my-5"><a href="{{ path('planets_show', {'id': whatPlanets.id}) }}" class="fs-17 text-dark hover-success">{{ whatPlanets.name }}</a></li>
                                        {% endfor %}
                                </ul>
                            {% else %}
                                <p>{{ ressource.name }} ne peut pas être trouvé tel quel sur une planète,
                                    elle peut-être obtenu par fusion d'une autre ressources ou via le labo de chimie.
                                </p>
                            {% endif %}
                            </p>
                        </div>
                    </div>

                    <div class="col-12">
                        <div>
                            <h5>Construction de véhicule(s)</h5>
                            {% if ressource.whatVehicles is not empty %}
                                <ul class="d-flex flex-wrap list-unstyled">
                                    {% for whatVehicles in ressource.whatVehicles %}
                                        <li class="mx-5 my-5"><a href="{{ path('vehicles_show', {'id': whatVehicles.id}) }}" class="fs-17 text-dark hover-success">{{ whatVehicles.name }}</a></li>
                                        {% endfor %}
                                </ul>
                            {% else %}
                                <p>{{ ressource.name }} n'est nécessaire pour aucun véhicule.</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-12">
                        <div>
                            <h5>Construction de machine(s)</h5>
                            {% if ressource.whatMachines is not empty %}
                                <ul class="d-flex flex-wrap list-unstyled">
                                    {% for whatMachines in ressource.whatMachines %}
                                        <li class="mx-5 my-5"><a href="{{ path('machines_show', {'id': whatMachines.id}) }}" class="fs-17 text-dark hover-success">{{ whatMachines.name }}</a></li>
                                        {% endfor %}
                                </ul>
                            {% else %}
                                <p>{{ ressource.name }} n'est nécessaire pour aucune machine.</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-12">
                        <div>
                            <h5>Construction d'objet(s)</h5>
                            {% if ressource.whatObjects is not empty %}
                                <ul class="d-flex flex-wrap list-unstyled">
                                    {% for whatObjects in ressource.whatObjects %}
                                        <li class="mx-5 my-5"><a href="{{ path('objects_show', {'id': whatObjects.id}) }}" class="fs-17 text-dark hover-success">{{ whatObjects.name }}</a></li>
                                        {% endfor %}
                                </ul>
                            {% else %}
                                <p>{{ ressource.name }} n'est nécessaire pour aucun objet.</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-12">
                        <div>
                            <h5>Production de ressource(s)</h5>
                            {% if ressource.ressourcesForRessource is not empty %}
                                <ul class="d-flex flex-wrap list-unstyled">
                                    {% for ressourcesForRessource in ressource.ressourcesForRessource %}
                                        <li class="mx-5 my-5"><a href="{{ path('ressources_show', {'id': ressourcesForRessource.id}) }}" class="fs-17 text-dark hover-success">{{ ressourcesForRessource.name }}</a></li>
                                        {% endfor %}
                                </ul>
                            {% else %}
                                <p>{{ ressource.name }} n'est nécessaire pour aucune ressource.</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-12 text-center">
                        <br><br>
                        {{ include('ressources/_delete_form.html.twig') }}
                    </div>

                </div>

            </div>
        </section>

    </main>
{% endblock %}
