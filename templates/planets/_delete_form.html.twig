<form method="post" action="{{ path('planets_delete', {'id': planet.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ planet.id) }}">
    <button class="btn btn-lg btn-danger">Supprimer {{ planet.name }}</button>
</form>
