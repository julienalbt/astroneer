{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}
    <main class="main-content mh-fullscreen bg-img center-vh" data-parallax="{{ asset('assets/img/accueil.jpg') }}" data-overlay="3">
        <div class="card card-shadowed p-50 w-700 my-50 opacity-85" style="max-width: 100%">
            <h5 class="text-uppercase text-center mb-50">S'enregistrer</h5>
            
            {{ form_start(form, { 'attr': {'class': 'form-type-material'} }) }}

            <div class="form-group">
                {{ form_row(form.username, { 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'fs-16 fw-600'} }) }}
            </div>
            <div class="form-group">
            {{ form_row(form.email, { 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'fs-16 fw-600'} }) }}
            </div>
            <div class="form-group">
            {{ form_row(form.password, { 'attr': {'class': 'form-control'}, 'label_attr': {'class': 'fs-16 fw-600'} }) }}
            </div>
            <br><br><br>
            <button class="btn btn-bold btn-block btn-info" type="submit">Enregistrer</button>
            <br>
            <a href="{{ path('default') }}" class="btn btn-bold btn-block btn-secondary" type="submit">Retour</a>
            {{ form_end(form) }}

            
        </div>
    </main>
{% endblock %}